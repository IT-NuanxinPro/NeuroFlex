{
  "name": "neuroflex",
  "version": "1.1.0",
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:apk": "node scripts/build-apk.js",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "version:sync": "node scripts/sync-version.js",
    "version:patch": "node scripts/sync-version.js --bump patch",
    "version:minor": "node scripts/sync-version.js --bump minor",
    "version:major": "node scripts/sync-version.js --bump major",
    "app:version:patch": "node scripts/sync-version.js --bump patch --app-only",
    "app:version:minor": "node scripts/sync-version.js --bump minor --app-only",
    "app:version:major": "node scripts/sync-version.js --bump major --app-only",
    "app:version:set": "node scripts/sync-version.js --app-only",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:run:android": "npx cap run android",
    "cap:build:android": "npx cap build android",
    "cap:build": "DISABLE_CDN=true npm run build",
    "android:dev": "npm run cap:build && npx cap copy android && npx cap run android",
    "android:debug": "npm run version:sync && npm run cap:build && npx cap sync && cd android && ./gradlew assembleDebug && cd ..",
    "android:release": "npm run version:sync && npm run cap:build && npx cap sync && cd android && ./gradlew assembleRelease && cd ..",
    "android:release:clean": "npm run version:sync && npm run cap:build && npx cap sync && cd android && ./gradlew clean assembleRelease && cd .."
  },
  "dependencies": {
    "@capacitor-community/text-to-speech": "^6.1.0",
    "@capacitor/preferences": "^8.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "gsap": "^3.12.5",
    "pinia": "^2.1.7",
    "vant": "^4.9.22",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/device": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/screen-orientation": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.0.0"
  }
}
